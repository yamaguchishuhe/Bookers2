<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  <%= render 'layouts/user', user: @user %>
<%= render 'layouts/form', book: @book_new %>
</div>
<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
　　　　　<td><%= link_to user_path(@book.user_id) do %>
          <%= attachment_image_tag @book.user,:profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %><br><%= link_to @user.name, user_path(@book.user_id) %>
          <% end %></td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
            <td><%= link_to"Edit",edit_book_path(@book),class:"btn-sm btn-success" %></td>
            <td><span><%= link_to"Destroy",book_path(@book),class:"btn-sm btn-danger", method: :delete, data: { confirm: '本当に消しますか？' } %></span></td>
        </tr>
      </tbody></table>
    </div>
   </div>
  </div>
